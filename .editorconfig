# EditorConfig for ZERB
# https://editorconfig.org
root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files - use tabs (community standard)
# Tab width is personal preference (set in your editor)
[*.go]
indent_style = tab

# YAML, JSON - use 2 spaces
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

# Markdown - use 2 spaces, preserve trailing spaces (for line breaks)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Nix files - use 2 spaces
[*.nix]
indent_style = space
indent_size = 2

# Shell scripts - use 2 spaces
[*.sh]
indent_style = space
indent_size = 2

# Makefiles and Justfiles - require tabs
[{Makefile,Justfile,*.mk}]
indent_style = tab
